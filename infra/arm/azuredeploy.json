{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "appName": {
      "type": "string",
      "defaultValue": "app-automattuner",
      "metadata": {
        "description": "The name of the Web App."
      }
    },
    "appServicePlanName": {
      "type": "string",
      "defaultValue": "asp-automattuner",
      "metadata": {
        "description": "The name of the App Service Plan."
      }
    },
    "acrName": {
      "type": "string",
      "defaultValue": "acrautomattuner",
      "metadata": {
        "description": "The name of the Azure Container Registry. Must be globally unique."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "aadClientId": {
      "type": "string",
      "metadata": {
        "description": "Client ID of the Azure AD App Registration."
      }
    },
    "aadClientSecret": {
      "type": "secureString",
      "metadata": {
        "description": "Client Secret of the Azure AD App Registration."
      }
    },
    "aadTenantId": {
      "type": "string",
      "metadata": {
        "description": "Tenant ID of the Azure AD App Registration."
      }
    },
    "repositoryUrl": {
      "type": "string",
      "metadata": {
        "description": "The URL of the GitHub repository containing the source code."
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.ContainerRegistry/registries",
      "apiVersion": "2023-01-01-preview",
      "name": "[parameters('acrName')]",
      "location": "[parameters('location')]",
      "tags": {
        "SourceRepo": "[parameters('repositoryUrl')]"
      },
      "sku": {
        "name": "Basic"
      },
      "properties": {
        "adminUserEnabled": true
      }
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2022-09-01",
      "name": "[parameters('appServicePlanName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "B1",
        "tier": "Basic"
      },
      "kind": "linux",
      "properties": {
        "reserved": true
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-09-01",
      "name": "[parameters('appName')]",
      "location": "[parameters('location')]",
      "kind": "app,linux,container",
      "tags": {
        "SourceRepo": "[parameters('repositoryUrl')]"
      },
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
        "siteConfig": {
          "linuxFxVersion": "DOCKER|[parameters('acrName')].azurecr.io/automattuner:latest",
          "appSettings": [
            {
              "name": "PROJECT_REPO_URL",
              "value": "[parameters('repositoryUrl')]"
            },
            {
              "name": "WEBSITES_ENABLE_APP_SERVICE_STORAGE",
              "value": "false"
            },
            {
              "name": "DOCKER_REGISTRY_SERVER_URL",
              "value": "[concat('https://', parameters('acrName'), '.azurecr.io')]"
            },
            {
              "name": "DOCKER_REGISTRY_SERVER_USERNAME",
              "value": "[listCredentials(resourceId('Microsoft.ContainerRegistry/registries', parameters('acrName')), '2023-01-01-preview').username]"
            },
            {
              "name": "DOCKER_REGISTRY_SERVER_PASSWORD",
              "value": "[listCredentials(resourceId('Microsoft.ContainerRegistry/registries', parameters('acrName')), '2023-01-01-preview').passwords[0].value]"
            },
            {
              "name": "AZURE_CLIENT_ID",
              "value": "[parameters('aadClientId')]"
            },
            {
              "name": "AZURE_TENANT_ID",
              "value": "[parameters('aadTenantId')]"
            },
            {
              "name": "AZURE_CLIENT_SECRET",
              "value": "[parameters('aadClientSecret')]"
            },
            {
              "name": "WEBSITES_PORT",
              "value": "5000"
            }
          ]
        },
        "httpsOnly": true
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
        "[resourceId('Microsoft.ContainerRegistry/registries', parameters('acrName'))]"
      ]
    }
  ],
  "outputs": {
    "webAppEndpoint": {
      "type": "string",
      "value": "[concat('https://', reference(resourceId('Microsoft.Web/sites', parameters('appName'))).defaultHostName)]"
    }
  }
}